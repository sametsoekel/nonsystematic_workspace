    "file = 'sayilar.txt'\n",
    "try:\n",
    "    dosya = open(file)\n",
    "    numbers = dosya.read().splitlines()\n",
    "    numbers = [ int(x) for x in numbers ]\n",
    "    ortalama = sum(numbers)/len(numbers)\n",
    "    \n",
    "    print('Sayilar Ortalamasi : '+str(ortalama))\n",
    "except IOError:\n",
    "    print(file+' bulunamadi')"
